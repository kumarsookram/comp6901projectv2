<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="383dp"
        android:layout_height="46dp"
        android:padding="8dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_invoice_id_driver_view"
            android:text="Invoice ID:"
            app:layout_constraintEnd_toStartOf="@+id/tv_invoice_id_driver_view"
            app:layout_constraintHorizontal_bias="0.235"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_order_id_driver_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/tv_invoice_id_driver_view"
            android:text="Title"
            app:layout_constraintTop_toBottomOf="@+id/tv_invoice_id_driver_view"
            tools:layout_editor_absoluteX="135dp" />

        <TextView
            android:id="@+id/tv_customer_driver_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/tv_order_id_driver_view"
            android:text="Description"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:id="@+id/tv_delivery_date_driver_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_customer_driver_view"
            android:layout_marginStart="11dp"
            android:layout_marginTop="-20dp"
            android:layout_toEndOf="@+id/tv_customer_driver_view"
            android:text="Description"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="92dp" />

        <TextView
            android:id="@+id/tv_invoice_comment_driver_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/tv_delivery_date_driver_view"
            android:text="Description"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="111dp" />

        <TextView
            android:id="@+id/tv_invoice_id_driver_view"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:text="Invoice ID"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="0dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
