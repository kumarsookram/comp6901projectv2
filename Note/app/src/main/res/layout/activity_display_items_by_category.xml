<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent" android:background="@color/colorPrimary"
android:paddingBottom="16dp"
android:paddingLeft="16dp"
android:paddingRight="16dp"
android:paddingTop="16dp"
    tools:context="uwi.comp6901.klbakery.ui.DisplayItemsByCategoryActivity">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageView2"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:src="@drawable/bakery_logo_tiny" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Category Name"
    android:id="@+id/txtCategoryName"
    android:layout_below="@+id/imageView2"
    android:layout_centerHorizontal="true"
    android:textColor="#000000"
    android:textSize="30dp" />

<ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/listView"
    android:layout_below="@+id/txtCategoryName"
    android:layout_alignParentEnd="true" />

</RelativeLayout>
